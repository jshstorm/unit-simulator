FROM node:22-alpine AS build
WORKDIR /app

COPY sim-studio/package.json sim-studio/package-lock.json ./
RUN npm ci

COPY sim-studio/ .
RUN npm run build

# Nginx로 정적 파일 서빙 + WebSocket 프록시
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000
